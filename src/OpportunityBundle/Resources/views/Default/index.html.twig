{% extends "SmartStartBase.html.twig" %}

{% block title %}Opportunities browser{% endblock %}
{% block body %}



    <!-- Title Page -->
    <section class="bg-title-page flex-c-m p-t-160 p-b-80 p-l-15 p-r-15" style="background-image: url({{ asset('images/bg-title-page-03.jpg') }});">
        <h2 class="tit6 t-center">
            Opportunities browser
        </h2>
    </section>


    <!-- Content page -->
    <div class="t-center">
						<span class="tit2 t-center">
							Manage your
						</span>

        <h3 class="tit3 t-center m-b-35 m-t-2">
            Opportunities
        </h3>
    </div>

    <section>


        <div class="bread-crumb bo5-b p-t-17 p-b-17">
            <div class="container">
                <a href="{{ path('opportunity_create') }}" class="opportunity">
                    Create opportunity
                </a>

                <span class="txt29 m-l-10 m-r-10">/</span>
                    <a href="{{ path('opportunity_create') }}" class="opportunity">
					General stats
                    </a>

            </div>
        </div>


        <div class="container">
            <div class="row">
                <div class="col-md-8 col-lg-9">
                    <div class="p-t-80 p-b-124 bo5-r h-full p-r-50 p-r-0-md bo-none-md">
                        <!-- Block4 -->
                        {% for opp in opportunities  %}
                            {% if opp.idEntreprise == currentuser %}


                                    <div class="container">
                                        <div class="row">
                                            <div class="col-md-8 col-lg-9">

                                                    <!-- Block4 -->
                                                    <div class="blo4 p-b-63">

                                                        <div class="pic-blo4 hov-img-zoom bo-rad-10 pos-relative">
                                                            <a href="blog-detail.html">
                                                                <img src="http://placehold.it/820x368" alt="IMG-BLOG">
                                                            </a>

                                                            <div class="date-blo4 flex-col-c-m">
									<span class="txt30 m-b-4">
										{{ opp.expiryDate | date('d')}}
									</span>

                                                                <span class="txt31">
										{{ opp.expiryDate | date('m/Y')}}
									</span>
                                                            </div>
                                                        </div>

                                                        <div class="text-blo4 p-t-33">
                                                            <h4 class="p-b-16">
                                                                <a href="{{ path('opportunity_detailopp',{'id': opp.idOpp} ) }}" class="tit9">{{ opp.jobTitle }}</a>
                                                            </h4>

                                                            <div class="txt32 flex-w p-b-24">



                                                                <span>
										{{ opp.expiryDate | date('d/m/Y')}}
                                                                    <span class="m-r-6 m-l-4">|</span>
									</span>

                                                                <span>
										{{ opp.jobCategory }}
                                                                    <span class="m-r-6 m-l-4">|</span>
									</span>

                                                                <span>
										{{ opp.Budget }}
									</span>
                                                            </div>

                                                            <p>
                                                                {{ opp.jobDescription }}
                                                            </p>

                                                            <a href="{{ path('opportunity_detailopp',{'id': opp.idOpp} ) }}" class="opportunity">
                                                                Continue Reading

                                                            </a>

                                                        </div>
                                                    </div>

                                            </div>
                                        </div>
                                    </div>

                                </opportunity>

                            {% endif %}
                        {% endfor %}

                        <!-- Block4 -->


                        <!-- Block4 -->



                        <!-- Block4 -->


                        <!-- Block4 -->



                        <!-- Pagination -->
                        <div class="pagination flex-l-m flex-w m-l--6 p-t-25">
                            <a  class="">{{ pagination(opportunities, 'page') }}</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-lg-3">
                    <div class="sidebar2 p-t-80 p-b-80 p-l-20 p-l-0-md p-t-0-md">
                        <!-- Search -->
                        <form>
                        <div class="search-sidebar2 size12 bo2 pos-relative">
                            <input  name="searched" class="input-search-sidebar2 txt10 p-l-20 p-r-55" type="text"  placeholder="Search">
                        <a  href="{{ path('opportunity_homepage') }}">
                            <button type="submit" class="btn-search-sidebar2 flex-c-m ti-search trans-0-4"></button> </a>
                        </div>
                        </form>
                        <!-- Categories -->
                        <div class="categories">
                            <h4 class="txt33 bo5-b p-b-35 p-t-58">
                               your Categories
                            </h4>

                            <ul>

                                {% for opp in opportunities  %}

                                <li class="bo5-b p-t-8 p-b-8">
                                    <a href="#" class="txt27">
                                      {{ opp.jobCategory}}
                                    </a>
                                </li>

                                {% endfor %}


                            </ul>
                        </div>

                        <!-- Most Popular -->
                        <div class="popular">
                            <h4 class="txt33 p-b-35 p-t-58">
                                Waiting Applicants
                            </h4>

                            <ul>
                                {% for ap in applications %}
                                {% if ap.idOpportunity.idEntreprise == currentuser %}
                                {% if ap.state == "APPLIED" %}
                                <li class="flex-w m-b-25">
                                    <div class="size16 bo-rad-10 wrap-pic-w of-hidden m-r-18">

                                    </div>

                                    <div class="size28">
                                        <a href="#" class="dis-block txt28 m-b-8">
                                            {{ ap.idOpportunity.JobTitle }}
                                        </a>

                                        <span class="txt14">
											{{ ap.idFreelancer.name}}
										</span>
                                    </div>
                                </li>
                                    {% endif %}
        {% endif %}
                                {% endfor %}

                            </ul>
                        </div>


                        <!-- Archive -->
                        <div class="archive">
                            <h4 class="txt33 p-b-20 p-t-43">
                                Total Applications
                            </h4>
                            {% for ap in applications  %}
                            {% if ap.idOpportunity.idEntreprise == currentuser  %}

                            <ul>

                                <li class="flex-sb-m p-t-8 p-b-8">
                                    <a href="#" class="txt27">
                                        {{ ap.idOpportunity.JobTitle }}
                                    </a>

                                    <span class="txt29">

										{{  loop.length  }}

                                    </span>


                                </li>

                                {% endif %}
                                {% endfor %}


                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% extends "SmartStartBase.html.twig" %}

{% block title %}Opportunities browser{% endblock %}
{% block body %}


    <!-- Title Page -->
    <section class="bg-title-page flex-c-m p-t-160 p-b-80 p-l-15 p-r-15" style="background-image: url({{ asset('images/bg-title-page-03.jpg') }});">
        <h2 class="tit6 t-center">
            Opportunities browser
        </h2>
    </section>
<div>
    {{ form_start(formOpportunity) }}



</div>
    <!-- Content page -->

    <section class="section-reservation bg1-pattern p-t-100 p-b-113">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 p-b-30">
                    <div class="t-center">
						<span class="tit2 t-center">
							Create your
						</span>

                        <h3 class="tit3 t-center m-b-35 m-t-2">
                            Opportunity
                        </h3>
                    </div>


                </div>
            </div>




            <form class="op" action="" method="post">
                <div class="row">
                    <div class="col-md-4">
                        <!-- Date -->
                        <span class="txt9">
									Expiry Date

								</span>

                        <div class="wrap-inputdate pos-relative txt10 size12 bo2 bo-rad-10 m-t-3 m-b-23">
                            {{   form_widget(formOpportunity.expiryDate, { 'attr': {'class': 'bo-rad-10 sizefull txt10 p-l-20','placeholder':'Expiry date','min':'dd/mm/yyyy' }}) }}

                            <i class="btn-calendar fa fa-calendar ab-r-m hov-pointer m-r-18" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <!-- Time -->
                        <span class="txt9">
									Job title
								</span>


                            <!-- Select2 -->
                            <div class="wrap-inputname size12 bo2 bo-rad-10 m-t-3 m-b-23">
                              {{   form_widget(formOpportunity.jobTitle, { 'attr': {'class': 'bo-rad-10 sizefull txt10 p-l-20','placeholder':'Job title'} }) }}

                            </div>

                    </div>

                    <div class="col-md-4">
                        <!-- People -->
                        <span class="txt9">
									Salary Per week ($)
								</span>


                            <!-- Select2 -->
                            <div class="wrap-inputname size12 bo2 bo-rad-10 m-t-3 m-b-23">


                                {{   form_widget(formOpportunity.budget, { 'attr': {'class': 'bo-rad-10 sizefull txt10 p-l-20','type':'number','placeholder':'Budget'} }) }}


                            </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <!-- Name -->
                        <span class="txt9" >
									Job category
								</span>

                        <div class="wrap-inputname size12 bo2 bo-rad-10 m-t-3 m-b-23">
                            {{   form_widget(formOpportunity.jobCategory, { 'attr': {'class': 'bo-rad-10 sizefull txt10 p-l-20', 'type' : 'text','placeholder':'Job Category'} }) }}



                              </div>
                    </div>

                    <div class="col-md-4">
                        <!-- Phone -->
                        <span class="txt9">
									 Duration (weeks)<Days></Days>
								</span>

                        <div class="wrap-inputphone size12 bo2 bo-rad-10 m-t-3 m-b-23" type="number">
                            {{   form_widget(formOpportunity.jobDuration, { 'attr': {'class': 'bo-rad-10 sizefull txt10 p-l-20','step':'0.01','placeholder':'Duration'} }) }}



                                      </div>
                    </div>

                    <div class="col-md-4">
                        <!-- Email -->
                        <span class="txt9">
									Job Description
								</span>

                        <div class="">

                            {{   form_widget(formOpportunity.jobDescription, { 'attr': {'class': 'bo-rad-10 size29 bo2 txt10 p-l-20 p-t-15 m-b-10 m-t-3', 'type' : 'textarea','placeholder':'Description','maxlenght':'2000'} }) }}

                        </div>
                    </div>

                </div>



                <div class="row">
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;               &nbsp;&nbsp;&nbsp;
                <div class="wrap-btn-booking flex-c-m m-t-6">
                    <!-- Button3 -->
                    <div class="col-md-4">
                    <button type="submit" class="btn3 flex-c-m size13 txt11 trans-0-4" href="{{ path('opportunity_create') }}">
                        Create opportunity
                    </button>

                    {{ form_end(formOpportunity) }}
                </div>
                </div>

                </div>
            </form>

















            <div class="info-reservation flex-w p-t-80">
                <div class="size23 w-full-md p-t-40 p-r-30 p-r-0-md">
                    <h4 class="txt5 m-b-18">
                        Reserve by Phone
                    </h4>

                    <p class="size25">
                        Donec quis euismod purus. Donec feugiat ligula rhoncus, varius nisl sed, tincidunt lectus.
                        <span class="txt25">Nulla vulputate</span>
                        , lectus vel volutpat efficitur, orci
                        <span class="txt25">lacus sodales</span>
                        sem, sit amet quam:
                        <span class="txt24">(001) 345 6889</span>
                    </p>
                </div>

                <div class="size24 w-full-md p-t-40">
                    <h4 class="txt5 m-b-18">
                        For Event Booking
                    </h4>

                    <p class="size26">
                        Donec feugiat ligula rhoncus:
                        <span class="txt24">(001) 345 6889</span>
                        , varius nisl sed, tinci-dunt lectus sodales sem.
                    </p>
                </div>

        </div>
        </div>
    </section>
{% endblock %}

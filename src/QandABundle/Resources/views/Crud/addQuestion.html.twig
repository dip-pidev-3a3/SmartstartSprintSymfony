{% extends "home.html.twig" %}
{% block title %}add question{% endblock %}

{% block content %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Add a question
            </h1>
        </section>
        {{ form_start(form) }}
        <section class="content">
                <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title"> {{ form_widget(form.question, { 'attr': {'class': 'form-control', 'type' : 'textarea'} }) }} </h3>

                        </div>

                        <div class="box-body">
                            <h3 class="box-title"> Description </h3>
                            {{ form_widget(form.description) }}
                        </div>
                        <div class="box-footer">
                          Subject :  {{ form_widget(form.subject) }}
                        </div>
                    <div class="box-tools pull-right"><button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="post the question">
                            {{ form_widget(form.Add) }}</button>
                    </div>
                </div>
        </section>
        {{ form_end(form) }}
    </div>
{% endblock %}
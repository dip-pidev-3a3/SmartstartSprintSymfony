{% extends "home.html.twig" %}
{% block content %}
<div class="content-wrapper">
        <section class="content-header">
            <h2>
                Update this question
            </h2>
        </section>
        {{ form_start(form) }}
        <section class="content">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title"> question </h3>
                    {{ form_widget(form.question) }}
                </div>
                <div class="box-body">
                    <h3 class="box-title"> description </h3>
                    {{ form_widget(form.description) }}
                </div>
                <div class="box-footer">
                    <h3 class="box-title"> subject </h3>
                    {{ form_widget(form.subject) }}
                </div>
                <div class="box-tools pull-right"><button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        {{ form_widget(form.Add) }}</button>
                </div>
            </div>
        </section>
        {{ form_end(form) }}
    </div>
{% endblock %}
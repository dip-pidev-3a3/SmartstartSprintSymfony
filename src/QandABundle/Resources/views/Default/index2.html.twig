                <ol class="breadcrumb">
                    <li> <label> <a href="{{ path('display_as',{'as':1}) }}">  <input type="checkbox" id="ch-a"> solved  </a></label>  </li>
                    <li> <label> <a href="{{ path('display_as',{'as':2}) }}">  <input type="checkbox" id="ch-na"> Not solved </a>  </label> </li>
